{
  "name": "@lossendae/vue-table",
  "description": "Simple table component for Vue.js 2.x with pagination and sortable columns",
  "version": "0.1.8",
  "private": false,
  "license": "MIT",
  "author": "St√©phane Boulard <lossendae@gmail.com>",
  "main": "dist/VueTable.umd.min.js",
  "module": "dist/VueTable.common.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lossendae/vue-table.git"
  },
  "bugs": {
    "url": "https://github.com/lossendae/vue-table/issues"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name VueTable src/main.js",
    "test": "vue-cli-service test:unit",
    "docs:serve": "vue-cli-service serve docs/main.js",
    "docs:build": "vue-cli-service build --dest docs/dist docs/main.js"
  },
  "keywords": [
    "vue.js",
    "vuejs",
    "component",
    "table",
    "datatable",
    "pagination-components",
    "json"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.10",
    "@vue/cli-plugin-unit-jest": "^3.0.0-rc.10",
    "@vue/cli-service": "^3.0.0-rc.10",
    "@vue/test-utils": "^1.0.0-beta.23",
    "accounting": "^0.4.1",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.4.2",
    "bootstrap": "^4.1.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "font-awesome": "^4.7.0",
    "jest-mock-console": "^0.4.0",
    "material-design-icons": "^3.0.1",
    "node-sass": "^4.9.2",
    "sass-loader": "^7.1.0",
    "v-tooltip": "^2.0.0-rc.33",
    "vue": "^2.5.17",
    "vue-multiselect": "^2.1.0",
    "vue-prism-component": "^1.0.1",
    "vue-template-compiler": "^2.5.17",
    "vuebar": "^0.0.18",
    "vuex": "^3.0.1"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/src/main.js",
      "!**/node_modules/**",
      "!**/docs/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!vue.config.js",
      "!**/tests/**"
    ]
  }
}
